<?xml version="1.0" encoding="utf-8"?>
<s:Group height="100%"
	width="100%"
	xmlns:components="components.*"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:ns="http://flex.apache.org/experimental/ns"
	xmlns:s="library://ns.adobe.com/flex/spark">

	<fx:Script>
		<![CDATA[
			import assets.AssetName;
			import assets.Assets;
			import model.Model;


			//=================================
			// protected properties 
			//=================================

			[Bindable] protected var _model : Model = Model.getInstance();
		]]>
	</fx:Script>

	<s:layout>

		<s:VerticalLayout paddingBottom="20"
			paddingLeft="20"
			paddingRight="20"
			paddingTop="20" />
	</s:layout>


	<s:HGroup horizontalAlign="center"
		verticalAlign="middle"
		width="100%">

		<s:Label text="URI" />

		<s:TextInput id="namespaceURIInput"
			width="700" />

	</s:HGroup>

	<components:Separator paddingBottom="10"
		paddingTop="10"
		width="100%" />

	<ns:HDividerGroup gap="7"
		height="100%"
		width="100%">

		<s:VGroup height="100%"
			width="37%">

			<s:HGroup verticalAlign="middle"
				width="100%">

				<s:Image click="_model.browseForSourceRoot();"
					source="{ Assets.getBitmapData( AssetName.ADD_ICON_16x16 ) }" />

				<s:Label paddingTop="3"
					text="Sources" />
			</s:HGroup>

			<mx:Tree dataProvider="{ _model.sources }"
				dragEnabled="true"
				height="100%"
				itemRenderer="{ _model.getSourcesTreeItemRendererFactory() }"
				labelFunction="{ _model.sourceTreeLabelFunction }"
				paddingBottom="3"
				paddingTop="3"
				showRoot="true"
				width="100%" />
		</s:VGroup>

		<s:VGroup height="100%"
			width="63%">

			<s:HGroup height="16"
				verticalAlign="middle"
				width="100%">

				<s:Label paddingTop="3"
					text="Classes ( { _model.components.length } )" />

			</s:HGroup>

			<s:DataGrid dataProvider="{ _model.components }"
				dropEnabled="true"
				height="100%"
				width="100%">

				<s:columns>

					<s:ArrayList>

						<s:GridColumn dataField="id"
							headerText="id" />

						<s:GridColumn dataField="clazz"
							headerText="class" />

						<s:GridColumn dataField="lookupOnly"
							editable="true"
							headerText="lookup only"
							width="100" />

						<s:GridColumn itemRenderer="{ _model.getComponentRemoveIconRendererFactory() }"
							width="44" />
					</s:ArrayList>
				</s:columns>

			</s:DataGrid>

		</s:VGroup>

	</ns:HDividerGroup>

</s:Group>
